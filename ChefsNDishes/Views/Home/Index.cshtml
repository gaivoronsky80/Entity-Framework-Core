@using ChefsNDishes.Models
@model List<Chef>

<link href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
<div class="wrapper">
    <div class="nav">
        <h1>Chefs | <a href="/dishes">Dishes</a></h1>
        
    </div>
    <a href="/new">Add a Chef</a>
    <div class="context" style="width: 600px">
        <h3>Check out our roster of Chefs!</h3>
        <hr>
        <table class="table table-dark" style="text-align:center">
            <thead>
                <tr>
                    <th scope="col">Name</th>
                    <th scope="col">Age</th>
                    <th scope="col"># of Dishes</th>
                </tr>
            </thead>
            <tbody>      
                @foreach(var chef in ViewBag.AllChefs)
                {
                <tr>
                    <td>@chef.FirstName @chef.LastName</td>
                    <td>@((int)((DateTime.Today - chef.DateOfBirth).TotalDays/365))</td>
                    <td>@chef.DishOfChef.Count</td>
                </tr>
                }
            </tbody>
            </table>

    </div>
</div>