@using ChefsNDishes.Models
@model Dish

<link href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
<div class="wrapper">
    <div class="nav">
        <h1><a href="/">Chefs</a> | Dishes</h1>
        
    </div>
    <a href="/dishes/new">Add a Dish</a>
    <div class="context" style="width: 600px">
        <h3>Yum, take a look at our tasty dishes!</h3>
        <hr>
        <table class="table table-dark" style="text-align:center">
            <thead>
                <tr>
                <th scope="col">Name</th>
                <th scope="col">Chef</th>
                <th scope="col">Tastiness</th>
                <th scope="col">Calories</th>
                </tr>
            </thead>
            <tbody>
                @foreach(var dish in ViewBag.AllDishes)
                {
                <tr>
                    <td>@dish.Name</td>
                    <td>@dish.Chef.FirstName @dish.Chef.LastName</td>
                    <td>@dish.Tastiness</td>
                    <td>@dish.Calories</td>
                </tr>
                }
            </tbody>
            </table>

    </div>
</div>