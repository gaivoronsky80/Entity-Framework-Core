@using WeddingPlanner2.Models
@model LogUser

<div class="offset-md-3 offset-0 col-6">
    <h2>Login</h2>
    <div asp-validation-summary="All"></div>
    <form asp-action="login" asp-controller="Home" method="post">
        <div class="form-group">
            <label asp-for="Email" class="d-block">Email:</label>
            <input type="text" class="form-control" asp-for="Email">
        </div>    
        <div class="form-group">
            <label asp-for="Password" class="d-block">Password:</label>
            <input type="password" class="form-control" asp-for="Password">
        </div> 
        <input type="submit" class="btn btn-primary float-right" Value="Log In">
    </form>
</div>